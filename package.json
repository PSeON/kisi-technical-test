{
  "name": "kisi-technical-test",
  "private": true,
  "version": "0.0.1",
  "description": "Kisi Technical Test",
  "author": "Serhii Petkun <sergeypetkun@gmail.com>",
  "license": "ISC",
  "scripts": {
    "lint": "prettier --check .",
    "lintfix": "prettier --write .",
    "build": "npm run build --workspaces",
    "run": "concurrently \"DATA_REPO=data-repo node server/dist/index.js\" \"HOST=0.0.0.0 PORT=8081 node client/.output/server/index.mjs\""
  },
  "workspaces": [
    "shared",
    "client",
    "server"
  ],
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "@babel/preset-typescript"
        ],
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
